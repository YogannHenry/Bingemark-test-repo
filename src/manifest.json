{
  "manifest_version": 3,
  "name": " Bingemarks",
  "version": "3.0",
  "description": "A modern bookmark manager",
  "permissions": [
    "storage",
    "bookmarks"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module",
    "persistent": true
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}